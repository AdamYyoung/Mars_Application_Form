<%- include('partials/header') %>
<h1>Stage 1: Personal Information</h1>
<form action="/stage2" method="POST">
    <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="fullName" name="fullName" value="<%= personalInfo.fullName || '' %>" required>
    </div>
    <div class="mb-3">
        <label for="dob" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" id="dob" name="dob" value="<%= personalInfo.dob || '' %>" required>
    </div>
    <div class="mb-3">
        <label for="nationality" class="form-label">Nationality</label>
        <input type="text" class="form-control" id="nationality" name="nationality" value="<%= personalInfo.nationality || '' %>" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= personalInfo.email || '' %>" required>
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input type="tel" class="form-control" id="phone" name="phone" value="<%= personalInfo.phone || '' %>" placeholder="123-456-7890" pattern="\d{3}-\d{3}-\d{4}" required>
    </div>
    <button type="submit" class="btn btn-primary">Next</button>
</form>
<%- include('partials/footer') %>

